<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        layout="@layout/action_bar"
        android:id="@+id/action_bar"/>

    <ImageView
        android:id="@+id/imgviewzwei"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <SurfaceView
        android:id="@+id/camerapreview"
        android:layout_width="200dp"

        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtContentzwei"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/ButtonAusDateizwei"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/ButtonAusDateizwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:onClick="OnClickAusDateizwei"
        android:text="Barcode aus Datei"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/camerapreview" />

    <Button
        android:id="@+id/ButtonKamerazwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginEnd="8dp"
        android:text="Barcode mit Kamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ButtonAusDateizwei"
        app:layout_constraintTop_toBottomOf="@id/camerapreview" />


    <Button
        android:id="@+id/ButtonAnmeldenzwei"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:layout_marginTop="40dp"
        android:onClick="OnClickAnmeldenzwei"
        android:text="Weiter zur Ort- und Zeitauswahl"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="63dp" />

    <EditText
        android:id="@+id/editText2"
        app:layout_constraintTop_toBottomOf="@id/txtContentzwei"
        android:layout_width="360dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Verifizieren Sie Ihre Retoure manuell"
        android:inputType="textPersonName"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="437dp" />


</android.support.constraint.ConstraintLayout>